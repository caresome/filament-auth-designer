{
    "name": "caresome/filament-auth-designer",
    "description": "Transform Filament's default auth pages into stunning, brand-ready experiences",
    "keywords": [
        "caresome",
        "laravel",
        "filament",
        "filament-plugin",
        "auth-designer",
        "authentication",
        "auth-pages"
    ],
    "homepage": "https://github.com/caresome/filament-auth-designer",
    "license": "MIT",
    "authors": [
        {
            "name": "Caresome",
            "email": "dev@caresome.app",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2|^8.3|^8.4",
        "filament/filament": "^4.0",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^11.0||^12.0"
    },
    "require-dev": {
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "orchestra/testbench": "^10.0.0||^9.0.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "rector/rector": "^2.2",
        "spatie/laravel-ray": "^1.35"
    },
    "autoload": {
        "psr-4": {
            "Caresome\\FilamentAuthDesigner\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Caresome\\FilamentAuthDesigner\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "refactor": "vendor/bin/rector process",
        "refactor:dry": "vendor/bin/rector process --dry-run"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Caresome\\FilamentAuthDesigner\\AuthDesignerServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
